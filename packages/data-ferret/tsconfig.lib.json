{
  "extends": "./tsconfig.json",
  "module": "esnext",
  "compilerOptions": {
    "outDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/"],
  "exclude": ["!src/", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
